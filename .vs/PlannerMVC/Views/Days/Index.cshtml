@model IEnumerable<PlannerMVC.Models.Day>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-responsive table-hover">
    @foreach (var item in Model)
    {
        <tr>

            <th>
                @Html.DisplayFor(modelItem => item.Days)
            </th>
       </tr>
       <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Days">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Days">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Days">Delete</a>
            </td>
        </tr>
    }
 
</table>
