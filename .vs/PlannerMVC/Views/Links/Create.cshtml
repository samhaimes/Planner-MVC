@model PlannerMVC.Models.Link

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Activity to Planner</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Activity" class="control-label"></label>
                <select asp-for="ActivityId" class ="form-control" asp-items="ViewBag.ActivityId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <select asp-for="DayId" class ="form-control" asp-items="ViewBag.DayId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

